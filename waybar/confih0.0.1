{
    "id": "top",
    "height": "0px",
    "margin": "0px 0px 0p 0px",
    "name": "top",
    "layer": "top",
    "position": "left",
    "modules-right": [
    "tray", 
    "disk", 
    "memory", 
    "cpu", 
    "network", 
    "pulseaudio", 
    "clock"],

    "modules-center": [ "sway/window" ],
    "modules-left": ["sway/workspaces"],
    "sway/workspaces": {
        "disable-scroll": false,
        "alphabetical_sort": false,
    },

    "sway/window": {
        "rotate":0,

    },

    "clock": {
        "rotate": 0,
        "format": "{:
 %A
 %D
 %B
 %I:%M:%S %p}",
         },

    
    "network": {
        "format": "{icon}",
        "format-icons": {
            "wifi": [""],
            "ethernet": ["󰈀"],
            "disconnected": ["󰖪"]
        },   
        "format-alt-click": "click-right",
        "format-wifi": "",
        "format-ethernet": "󰈀",
        "format-disconnected": "󰖪", 
        "tooltip-format": "{ifname} via {gwaddr}",
        "tooltip-format-wifi": "    {essid} \n{ipaddr} {signalStrength}%",
        "tooltip-format-ethernet": "{ifname} {ipaddr} 󰈀",
        "tooltip-format-disconnected": "Disconnected",
        "on-click": "gnome-control-center network",
        "tooltip": true
    },

    "pulseaudio": {
        "format": "{icon}",
        "format-alt-click": "click-right",
        "format-bluetooth": "󰂰",
        "format-muted": "󰝟",
        "format-icons": {
            "headphone": "󰋋",
            "default": ["󰕿", "󰖀", "󰕾"]
        },
        "tooltip-format": "{volume}",
        "scroll-step": 10,
        ///"on-click": "",
        "states": {
            "low": 0,
            "mid": 50,
            "high": 100
        },
        "smooth-scrolling-threshold": 1.0,
    },
    "cpu": {
        "interval": 10,
        "format": "󰍛",
        "format-alt-click": "click-right",
        "on-click": "~/.config/waybar/custom/stats.sh cpu",
        "states": {
            "low": 0,
            "mid": 25,
            "high": 50
        }
    },
    "memory": {
        "interval": 1,
        "format": "",
        "format": "free --mega | awk 'NR==2{printf(\"%.1f%%\", $3*100/$2)}'",
        "return-type": "json",
        "tooltip-format": "{used:0.1f}G used\n{avail:0.1f}G available\n{total:0.1f}G total",
        "format-alt-click": "click-right",
        "on-click": "~/.config/waybar/custom/stats.sh memory",
        "states": {
            "low": 0,
            "mid": 50,
            "high": 75
        }
    },
    "disk": {
        "interval": 30,
        "format": "󰋊",
        "format-alt-click": "click-right",
        "tooltip-format": "{used} used\n{free} free\n{total} total",
        "on-click": "~/.config/waybar/custom/disk_stats.sh",
        "path": "/",
        "states": {
            "low": 0,
            "mid": 25,
            "high": 50
        }
      },

    "tray": {
      "icon-size": 12,
      "spacing": 10, 
    },
}